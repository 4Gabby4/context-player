<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gabchmel.contextmusicplayer">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Permission to control media on lock screen -->
    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <!-- Permission to read local song files -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permission to get location updates -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permission to start foreground service (music playback service) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Permission to detect mobile user activity-->
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />

    <!-- Permission to do not use battery optimization -->
    <uses-permission  android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />

        <activity
            android:name=".PermissionsActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MediaPlaybackService"
            android:exported="false">
            <intent-filter>
                <!-- IDK if delete -->
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />

                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>
        </service>

        <service
            android:name="com.gabchmel.sensorprocessor.SensorProcessService"
            android:exported="true"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

        </service>

        <service
            android:name=".AutoPlaySongService"
            android:exported="false"
            tools:ignore="Instantiatable" />

        <service
            android:name="com.gabchmel.sensorprocessor.SensorIntentService"
            android:exported="false" />

        <receiver
            android:name="androidx.media.session.MediaButtonReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.gabchmel.sensorprocessor.ActivityTransitionReceiver"
            android:exported="false"
            android:permission="com.google.android.gms.permission.ACTIVITY_RECOGNITION">
            <intent-filter>
                <action android:name="TRANSITION_UPDATES" />
            </intent-filter>
        </receiver>

<!--        <receiver-->
<!--            android:name="com.gabchmel.sensorprocessor.SensorReceiver"-->
<!--            android:exported="true">-->
<!--            <intent-filter>-->
<!--                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />-->
<!--                <action android:name="android.intent.action.ACTION_BATTERY_CHANGED" />-->
<!--            </intent-filter>-->
<!--        </receiver>-->

        <receiver
            android:name="com.gabchmel.sensorprocessor.ActivityTransitionReceiver"
            android:exported="false"
            android:permission="com.google.android.gms.permission.ACTIVITY_RECOGNITION">
            <intent-filter>
                <action android:name="TRANSITION_UPDATES" />
            </intent-filter>
        </receiver>

        <receiver android:name=".ContextReceiver"
            android:exported="false"
            android:permission="com.google.android.gms.permission.ACTIVITY_RECOGNITION">
            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE"/>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED" />
                <action android:name="android.intent.action.BATTERY_CHANGED" />
                <action android:name="MyAction" />
                <action android:name="ACTION_HEADSET_PLUG" />
                <action android:name="TRANSITION_UPDATES" />
            </intent-filter>
        </receiver>
    </application>

</manifest>